
# this is a module file, any module specific info belongs here
{
    "moduleid": "parnmr",
    "label": "PARNMR",
    "fields": [
        {
            "role": "input",
            "id": "module_header",
            "label": "PARNMR",
            "type": "label",
            "default": "header4",
            "prehline": "true",
            "posthline": "true"
        },
        {
            "role": "input",
            "id": "runname",
            "label": "run name",
            "type": "text",
            "default": "run_0",
            "required": "true",
            "help": "results will be placed in a folder called pdbscan/ in the directory name you enter here"
        },
        {
            "role": "input",
            "id": "pdbinput",
            "name": "pdbinput",
            "label": "pdbinput",
            "type": "listbox",
            "values": "local pdb directory~c1~local pdb files~c2~server pdb path~c3",
            "default": "c2",
            "repeater": "true",
            "help": "PDB input listbox"
        },
        {
            "role": "input",
            "id": "pdblocaldirectory",
            "label": "pdbdirectory",
            "type": "file",
            "directory": "true",
            "default": "pdb",
            "repeat": "pdbinput:c1",
            "help": "Select PDB directory from local computer"
        },
        {
            "role": "input",
            "id": "pdblocalfiles",
            "label": "pdbfiles",
            "type": "file",
            "multiple": "true",
            "repeat": "pdbinput:c2",
            "help": "Select PDB files from local computer"
        },
        {
            "role": "input",
            "id": "pdbserverpath",
            "label": "pdbpath",
            "type": "rpath",
            "repeat": "pdbinput:c3",
            "help": "Select PDB directory from server"
        },
        {
            "role": "input",
            "id": "pdb_model",
            "label": "pdb model",
            "type": "text",
            "default": "1",
            "help": "Select PDB model number"
        },
        #{
        #    "role": "input",
        #    "id": "dcdfile",
        #    "label": "pdb/dcd file input",
        #    "type": "lrfile",
        #    "required": "true",
        #    "help": "name of PDB/DCD file you wish to scan",
        #    "norow": "false"
        #},
        {
            "role": "input",
            "id": "residue_flag",
            "label": "residue input",
            "type": "listbox",
            "values": "all~c1~file input~c2~text input~c3",
            "default": "c1",
            "repeater": "true",
            "help": "options for inputting residue numbers (no input, file input, text input)"
        },
        {
            "role": "input",
            "id": "inclusionfile",
            "label": "residue inclusion file",
            "type": "lrfile",
            "repeat": "residue_flag:c2",
            "help": "name of file with residue numbers and inclusive ranges to include"
        },
        {
            "role": "input",
            "id": "exclusionfile",
            "label": "residue exclusion file",
            "type": "lrfile",
            "repeat": "residue_flag:c2",
            "help": "name of file with residue numbers and inclusive ranges to exc alude"
        },
        {
            "role": "input",
            "id": "inclusiontext",
            "label": "residue numbers/ranges to include",
            "type": "text",
            "repeat": "residue_flag:c3",
            "help": "comma-separated list with residue numbers and inclusive ranges to include"
        },
        {
            "role": "input",
            "id": "exclusiontext",
            "label": "residue numbers/ranges to exclude",
            "type": "text",
            "repeat": "residue_flag:c3",
            "help": "comma-separated list with residue numbers and inclusive ranges to exclude"
        },
        {
            "role": "input",
            "id": "atomtypes",
            "label": "atom names",
            "type": "text",
            "default": "N, H",
            "help": "Two comma-separated or space-separated atom names are required for predict RDCs. PCS and PRE will accept more than one atom name but only use the first.",
            "norow": "false"
        },
        {
            "role": "input",
            "id": "paramagnetic_coord",
            "label": "paramagnetic center position (for PCS, PRE) [Angstroms]",
            "type": "text",
            "default": "0,0,0",
            "help": "required for predicting PCSs or PREs"
        },
        {
            "role": "input",
            "id": "listboxsuscept",
            "name": "listboxsuscept",
            "label": "susceptibility (for RDC, PCS)",
            "type": "listbox",
            "values": "5-parameter susceptibility tensor~c1~2-par susceptibility tensor + 3 Euler angles~c2",
            "default": "c1",
            "repeater": "true",
            "help": "required for predicting RDC or PCS"
        },
        {
            "role": "input",
            "id": "susceptibility_c1",
            "label": "5-parameter susceptibility tensor",
            "type": "text",
            "default": "0,0,0,0,0",
            "repeat": "listboxsuscept:c1"
        },
        {
            "role": "input",
            "id": "susceptibility_c2",
            "label": "2-parameter susceptibility + 3 Euler",
            "type": "text",
            "default": "0,0,0,0,0",
            "repeat": "listboxsuscept:c2"
        },
        {
            "role": "input",
            "id": "frequency",
            "label": "frequency (for RDC, PRE) [MHz]",
            "type": "text",
            "default": "600",
            "help": "frequency in MHz"
        },
        {
            "role": "input",
            "id": "chainID",
            "label": "chain ID",
            "type": "text",
            "default": "A",
            "help": "The chain on the PDB file that will be selected"
        },
        {
            "role": "input",
            "id": "choose_pcs",
            "label": "predict PCSs",
            "type": "checkbox",
            "style": "switch",
            "checked": "true",
            "repeater": "true"
        },
        {
            "role": "input",
            "id": "choose_rdc",
            "label": "predict RDCs",
            "type": "checkbox",
            "style": "switch",
            "checked": "false",
            "repeater": "true"
        },
        {
            "role": "input",
            "id": "order_parameter",
            "label": "order parameter",
            "type": "text",
            "default": "1",
            "repeat": "choose_rdc"
        },
        {
            "role": "input",
            "id": "temp",
            "label": "temperature [K]",
            "type": "text",
            "default": "298",
            "repeat": "choose_rdc"
        },
        {
            "role": "input",
            "id": "choose_pre",
            "label": "predict PREs",
            "type": "checkbox",
            "style": "switch",
            "checked": "false",
            "repeater": "true"
        },
        {
            "role": "input",
            "id": "tauc",
            "label": "rotational correlation time TAUc [ns]",
            "type": "float",
            "default": "4.5",
            "step": "0.1",
            "repeat": "choose_pre"
        },
        {
            "role": "input",
            "id": "T2_dia",
            "label": "1H T2_dia time [s]",
            "type": "float",
            "default": "0.05",
            "step": "0.1",
            "repeat": "choose_pre"
        },
        {
            "role": "input",
            "id": "exptime_1H",
            "label": "1H experimental time [s]",
            "type": "float",
            "default": "0.005",
            "repeat": "choose_pre"
        },
        {
            "role": "input",
            "id": "spin",
            "label": "paramagnetic spin",
            "type": "float",
            "default": "0.5",
            "repeat": "choose_pre"
        },
        {
            "role": "output",
            "id": "progress_output",
            "label": "progress: ",
            "type": "progress",
            "max": 1.0
        },
        {
            "role": "output",
            "id": "progress_html",
            "name": "progress_html",
            "label": "percent done: ",
            "type": "html"
        },
        {
            "role": "output",
            "id": "pre_graph",
            "label": "",
            "type": "plotly"
        },
        {
            "role": "output",
            "id": "pcs_graph",
            "label": "",
            "type": "plotly"
        },
        {
            "role": "output",
            "id": "rdc_graph",
            "label": "",
            "type": "plotly"
        }
    ],
# the executable will take inputs in order and produce output
    "executable": "predict.py"
}
